<?xml version="1.0" encoding="utf-8" ?>
<Sprites>
	
	<Tilesets>
		<RandomOf4 id="1" path="gray" tileSize="8"/>
		<OneOfEach id="2" path="grass" tileSize="8"/>
	</Tilesets>
	
	<Animations>
	
		<Player path="Player" start="idle">
		
			<Loop id="idle" path="idle" delay="1"/>
			<Loop id="run" path="run" delay="0.1"/>
			<Anim id="jump" path="jump" delay="0.1" goto="ascend"/>
			<Loop id="ascend" path="ascend" delay="1"/>
			<Loop id="fall" path="fall" delay="1"/>
			<Loop id="swing" path="swing" delay="1"/>
			<Loop id="wallSlide" path="wallSlide" delay="1"/>
		
		</Player>

		<Folder path="Objects">

			<Refill path="refill" start="rotate">
				<Loop id="rotate" path="rotate" delay="0.1"/>
				<Anim id="respawn" path="respawn" delay="0.05" goto="rotate"/>
			</Refill>
			
			<RAM path="RAM" start="rotate">
				<Loop id="rotate" path="rotate" delay="0.1"/>
			</RAM>
			
			<StreetLight path="streetLight" start="light">
				<Loop id="light" path="light" delay="0.1"/>
				<Anim id="blink" path="blink" delay="0.05" goto="off"/>
				<Loop id="off" path="off" delay="0.1"/>
			</StreetLight>

			<ProjectorLight path="projectorLight">
				<Loop id="Ground" path="ground" delay="0.1"/>
				<Loop id="Corner" path="corner" delay="0.1"/>
				<Loop id="Ceiling" path="ceiling" delay="0.1"/>
			</ProjectorLight>

			<JetpackBooster path="">
				<Loop id="right" path="jetpackBooster" delay="0.05"/>
			</JetpackBooster>
			
			<Folder path ="scenery">
				
				<JetpackTutorialScreen start="jetpackTutorialScreen">
					<Loop id="jetpackTutorialScreen" path ="jetpackTutorialScreen" delay ="0.1"/>
				</JetpackTutorialScreen>
				
				<Screen path="screen" start="appear">
					<Anim id="appear" path ="glitch_appear" delay="0.050" goto="loop"/>
					<Loop id="loop" path ="glitch_loop" delay="0.080"/>
				</Screen>
				
				<LittleScreen path="screen/little" start="ltext">
					<Anim id="ltext" path ="ltext" delay ="0.025" goto="begintransfer"/>
					<Anim id="begintransfer" path ="begintransfer" delay ="0.025" goto="transfer"/>
					<Loop id="transfer" path ="transfer" delay ="0.025" loop="5" goto="completetransfer"/>
					<Anim id="completetransfer" path ="completetransfer" delay ="0.025" goto="ltext"/>
				</LittleScreen>
				
				<FallingMachine path="fallingMachine" start="standing">
					<Loop id="standing" path="standing" delay="1"/>
					<Anim id="falling" path="falling" delay="0.1" goto="fallen"/>
					<Loop id="fallen" path="fallen" delay="1"/>
				</FallingMachine>

				<Folder path ="screen">
					<sc1 path="" start="normal">
						<Loop id="normal" path ="sc1"/>
					</sc1>
					
					<sc2 path="" start="normal">
						<Loop id="normal" path ="sc2"/>
					</sc2>
					
					<sc3 path="" start="normal">
						<Loop id="normal" path ="sc3"/>
					</sc3>
					
					<sc4 path="" start="normal">
						<Loop id="normal" path ="sc4"/>
					</sc4>
				</Folder>
				
			</Folder>
				
		</Folder>
	
	</Animations>
	
</Sprites>